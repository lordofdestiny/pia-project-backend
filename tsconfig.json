{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitThis": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@*": [
        "src/*"
      ],
      // "*": [
      //   "node_modules/*",
      // ],
    },
    "typeRoots": [
      "node_modules/*",
      "src/types/*"
    ],
    "lib": [
      "ESNext",
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}