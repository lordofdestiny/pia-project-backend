{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "removeComments": true,
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "lib": ["ESNext"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
